.col-md-12.row
  .col-md-6
    = p.text_field :first_name
    = p.text_field :last_name
    = p.text_field :email
    = p.text_field :email_confirmation
    = p.select :gender, [[t('man'),'M'],[t('woman'),'F']]
    = p.date_field :birthday
  .col-md-6
    = p.text_field :departement
    = p.select :vtt, [[t('none'),'N'],'S','M','L']
    = p.select :shirt_size, %w(S M L XL)
    = p.text_area :meal
    = p.text_area :other
    = p.hidden_field :user_id